<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="buttonflat">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:backgroundTint">@color/DarkSlateBlue</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">5dp</item>
    </style>

    <style name="buttonOutline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:strokeColor">@color/black</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">5dp</item>
    </style>

    <style name="landButton1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:backgroundTint">@color/DarkSlateBlue</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">5dp</item>
    </style>
    <style name="landButton2" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:strokeColor">@color/black</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">5dp</item>
    </style>

    <style name="caja_textos">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:alpha">0.6</item>
        <item name="android:background">@color/white</item>
    </style>
</resources>