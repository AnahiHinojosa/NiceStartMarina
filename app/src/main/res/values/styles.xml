<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="buttonflat">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:backgroundTint">@color/fucsia_700</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">5dp</item>
    </style>

    <style name="buttonOutline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:strokeColor">@color/white</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">5dp</item>
    </style>
</resources>